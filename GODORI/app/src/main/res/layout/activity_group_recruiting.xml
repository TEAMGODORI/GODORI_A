<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.GroupRecruitingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:orientation="vertical"
        tools:context=".GroupRecruitingFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:background="@drawable/gr_img_recruiting_background"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/gr_btn_recruiting_back"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="-13dp"
                android:background="@drawable/gr_btn_back_white"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvGroupRecruitingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:includeFontPadding="false"
                android:text="도리 님의 운동 취향"
                android:letterSpacing="-0.02"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGroupRecruitingSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGroupRecruitingTitle"
                android:layout_marginTop="24dp"
                android:includeFontPadding="false"
                android:letterSpacing="-0.02"
                android:fontFamily="@font/notosanskr_medium"
                android:text="운동 취향을 선택하고\n나에게 맞는 그룹을 찾아보세요"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <ImageButton
                android:id="@+id/gr_btn_recruiting_modify"
                android:layout_width="165dp"
                android:layout_height="42dp"
                android:layout_below="@+id/tvGroupRecruitingSubtitle"
                android:layout_marginTop="27dp"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:scaleType="fitStart"
                android:src="@drawable/gr_img_recruiting_modify" />

            <ImageView
                android:layout_width="156dp"
                android:layout_height="143dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="77dp"
                android:src="@drawable/gr_img_recruiting_runner" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste">

                    <TextView
                        android:id="@+id/gr_tv_taste1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste">

                    <TextView
                        android:id="@+id/gr_tv_taste2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gr_lay_taste3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste">

                    <TextView
                        android:id="@+id/gr_tv_taste3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gr_lay_taste4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gr_tv_taste4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gr_lay_taste5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gr_tv_taste5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gr_lay_taste6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gr_tv_taste6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gr_lay_taste7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gr_tv_taste7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gr_lay_taste8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/gr_ly_cdv_recruiting_taste"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gr_tv_taste8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6.5dp"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="#2c2c2d"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#f5f5f5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gr_tv_recruiting_groupNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:paddingLeft="18dp"
                android:text=""
                android:textColor="#2c2c2d"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gr_rcv_recruiting_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:stackFromEnd="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
