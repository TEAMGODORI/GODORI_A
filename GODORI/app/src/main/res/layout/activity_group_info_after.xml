<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context=".activity.GroupInfoAfterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/gr_ll_info_after"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:background="@drawable/gr_img_info_title">

            <ImageView
                android:id="@+id/gr_iv_info_img_after"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/gr_img_info_title" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/btnRecruitingBack"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="9dp">

                <ImageButton
                    android:id="@+id/gr_btn_info_after_back"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/gr_btn_back_white"
                    android:gravity="center" />
            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="-62dp"
            android:background="@drawable/gr_ly_rl_info1">

            <TextView
                android:id="@+id/gr_tv_info_after_title_exercise"
                android:fontFamily="@font/notosanskr_bold"
                android:letterSpacing="-0.02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:includeFontPadding="false"
                android:text="헬스"
                android:textColor="#5c6cf3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gr_tv_info_after_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gr_tv_info_after_title_exercise"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="고도리"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="312dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="89dp"
                android:background="@drawable/gr_img_info_line" />

            <TextView
                android:id="@+id/gr_tv_info_after_title_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="107dp"
                android:includeFontPadding="false"
                android:text="헬린이들 집합"
                android:textColor="#2c2c2d"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="23dp">

                <TextView
                    android:id="@+id/gr_tv_info_after_title_startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2021.01.26~"
                    android:textColor="#979797"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/gr_tv_info_after_title_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/gr_tv_info_title_startdate"
                    android:includeFontPadding="false"
                    android:text="・"
                    android:textColor="#979797"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/gr_tv_info_after_group_maker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/gr_tv_info_after_title_point"
                    android:includeFontPadding="false"
                    android:text="벅지니"
                    android:textColor="#979797"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/gr_btn_info_1"
                        android:layout_width="188dp"
                        android:layout_height="60dp"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/gr_ly_btn_info_1"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/gr_ly_btn_info_text"
                        android:textSize="20sp"
                        android:text="그룹 정보" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="#f2f2f2" />

                    <RadioButton
                        android:id="@+id/gr_btn_info_2"
                        android:layout_width="188dp"
                        android:layout_height="60dp"
                        android:button="@null"
                        android:background="@drawable/gr_ly_btn_info_2"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="@color/gr_ly_btn_info_text"
                        android:textSize="20sp"
                        android:text="그룹원 정보" />
                </RadioGroup>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/gr_frame_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/gr_btn_otherGroup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="18dp"
            android:background="@drawable/gr_ly_btn_other_group"
            android:gravity="center"
            android:text="다른 그룹 구경가기"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/gr_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gr_ly_btn_exit"
            android:gravity="center"
            android:text="탈퇴하기"
            android:textColor="#8d8a8a"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>