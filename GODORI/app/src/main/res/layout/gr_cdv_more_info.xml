<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gr_cdv_recruiting_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    card_view:cardBackgroundColor="@color/transparent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/gr_iv_more_title"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:background="@drawable/gr_ly_iv_more_title"
            android:scaleType="centerCrop"
            android:letterSpacing="-0.02"
             android:fontFamily="@font/notosanskr_medium"
            android:src="@drawable/gr_img_info_title"
            card_view:riv_corner_radius="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/gr_before_tab_people"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/gr_tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_medium"
                android:textColor="#6280f2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"
                android:textSize="12sp"
                android:letterSpacing="-0.02"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:textColor="#6280f2"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">

            <TextView
                android:id="@+id/gr_tv_more_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gr_iv_creation_title"
                android:includeFontPadding="false"
                android:text="고도리"
                android:layout_marginTop="4dp"
                android:letterSpacing="-0.02"
                android:fontFamily="@font/notosanskr_medium"
                android:textColor="#494949"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gr_tv_more_groupLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gr_tv_more_groupName"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="헬린이들 집합"
                android:letterSpacing="-0.02"
                android:textColor="#797979"
                android:textSize="14sp"
                android:fontFamily="@font/notosanskr_medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gr_tv_more_groupLine"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gr_tv_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gr_ly_tv_creation_title"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.02"
                    android:paddingHorizontal="8dp"
                    android:text="운동"
                    android:textColor="#797979"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/gr_tv_cycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/gr_ly_tv_creation_title"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="8dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:letterSpacing="-0.02"
                    android:text="주4회"
                    android:textColor="#797979"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/gr_tv_intensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/gr_ly_tv_creation_title"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="8dp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="중"
                    android:letterSpacing="-0.02"
                    android:textColor="#797979"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>